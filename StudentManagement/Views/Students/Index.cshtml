@model IEnumerable<Students>

@{
	ViewData["Title"] = "List of Students";
}

<div class="text-white">
	<a asp-controller="Students" class="btn btn-outline-success">Show Data Student</a>
</div>

<div class="row">
	<div class="col-md-10 offset-1">
		<table class="table">
			<th>
				<tr>
					<th>ID</th>
					<th>Name</th>
					<th>Prodi</th>
					<th>Address</th>
					<th>Action</th>
				</tr>
			</th>
		<tbody>
			@foreach(var item in Model)
			{
				<tr>
					<td class="align-middle">@item.Id</td>
					<td class="align-middle">@item.Name</td>
					<td class="align-middle">@item.Prodi</td>
					<td class="align-middle">@item.Address</td>
					<td class="align-middle">
						<a class="btn btn-outline-primary" asp-controller="Students" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
							<a class="btn btn-outline-info" asp-controller="Students" asp-action="Details" asp-route-id="@item.Id">Details</a>
							<a class="btn btn-danger text-white" asp-controller="Students" asp-action="Delete" asp-route-id="@item.Id">Hapus</a>
					</td>

				</tr>
			}
		</tbody>
		</table>
	</div>
</div>

<div class="text-white">
	<a asp-controller="Students" asp-action="Create" class="btn btn-outline-success">Add Data Student</a>
</div>